{
  "fmt": {
    "exclude": [
      "src/static/",
      "example/",
      "docs/",
      "__trash/",
      "dist/"
    ]
  },
  "lint": {
    "exclude": [
      "src/static/",
      "example/",
      "docs/",
      "__trash/",
      "dist/"
    ],
    "rules": {
      "exclude": [
        "no-explicit-any",
        "no-unused-vars",
        "require-await"
      ]
    }
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --watch main.ts --cache --webdav ./example",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env main.ts",
    "mcp": "deno run --allow-read --allow-write --allow-env mcp.ts",
    "test": "deno test --allow-read --allow-write --allow-env tests/",
    "test:watch": "deno test --allow-read --allow-write --allow-env --watch tests/",
    "compile": "deno compile --allow-net --allow-read --allow-write --allow-env --include ./src/static --output mdplanner main.ts",
    "compile:linux": "deno compile --allow-net --allow-read --allow-write --allow-env --include ./src/static --target x86_64-unknown-linux-gnu --output dist/mdplanner-linux main.ts",
    "compile:macos-intel": "deno compile --allow-net --allow-read --allow-write --allow-env --include ./src/static --target x86_64-apple-darwin --output dist/mdplanner-macos-intel main.ts",
    "compile:macos-arm": "deno compile --allow-net --allow-read --allow-write --allow-env --include ./src/static --target aarch64-apple-darwin --output dist/mdplanner-macos-arm main.ts",
    "compile:windows": "deno compile --allow-net --allow-read --allow-write --allow-env --include ./src/static --target x86_64-pc-windows-msvc --output dist/mdplanner-windows main.ts",
    "compile:all": "mkdir -p dist && deno task compile:linux && deno task compile:macos-intel && deno task compile:macos-arm && deno task compile:windows",
    "compile:mcp:linux": "deno compile --allow-read --allow-write --allow-env --target x86_64-unknown-linux-gnu --output dist/mdplanner-mcp-linux mcp.ts",
    "compile:mcp:macos-intel": "deno compile --allow-read --allow-write --allow-env --target x86_64-apple-darwin --output dist/mdplanner-mcp-macos-intel mcp.ts",
    "compile:mcp:macos-arm": "deno compile --allow-read --allow-write --allow-env --target aarch64-apple-darwin --output dist/mdplanner-mcp-macos-arm mcp.ts",
    "compile:mcp:windows": "deno compile --allow-read --allow-write --allow-env --target x86_64-pc-windows-msvc --output dist/mdplanner-mcp-windows mcp.ts",
    "compile:mcp:all": "mkdir -p dist && deno task compile:mcp:linux && deno task compile:mcp:macos-intel && deno task compile:mcp:macos-arm && deno task compile:mcp:windows"
  },
  "imports": {
    "deno/http": "https://deno.land/std@0.224.0/http/server.ts",
    "deno/http/file_server": "https://deno.land/std@0.224.0/http/file_server.ts",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "hono": "jsr:@hono/hono@^4",
    "hono/cors": "jsr:@hono/hono@^4/cors",
    "hono/deno": "jsr:@hono/hono@^4/deno",
    "zod": "npm:zod@3.25.76",
    "@modelcontextprotocol/sdk/server/mcp.js": "npm:@modelcontextprotocol/sdk@1.26.0/server/mcp.js",
    "@modelcontextprotocol/sdk/server/stdio.js": "npm:@modelcontextprotocol/sdk@1.26.0/server/stdio.js",
    "@modelcontextprotocol/sdk/server/streamableHttp.js": "npm:@modelcontextprotocol/sdk@1.26.0/server/streamableHttp.js",
    "@modelcontextprotocol/sdk/server/webStandardStreamableHttp.js": "npm:@modelcontextprotocol/sdk@1.26.0/server/webStandardStreamableHttp.js",
    "@modelcontextprotocol/sdk/client/index.js": "npm:@modelcontextprotocol/sdk@1.26.0/client/index.js",
    "@modelcontextprotocol/sdk/inMemory.js": "npm:@modelcontextprotocol/sdk@1.26.0/inMemory.js"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "deno.ns"]
  }
}
